<!DOCTYPE html>

  <head>
    <link rel="stylesheet" href="http://localhost:5000/styles/style.css">
    <script src="http://localhost:5000/scripts/dashboard.js"></script>
    <script src="http://localhost:5000/scripts/api/controller.js" ></script>    
    <script src="http://localhost:5000/scripts/config/config.js" ></script>
    <script src="http://localhost:5000/scripts/models/recipeModel.js"></script>
  </head>
  
  <div class="home-view">

    <div class="topnav">

      <a class="active top-buttons" href="/client">Home</a>
      <a class="top-buttons" href="/client/add_recipe">Add Recipe</a>
      <a class="top-buttons" href="/client/login_page">Log In</a>
      <script src="http://localhost:5000/scripts/dashboard.js"></script>

    </div>


    <div id = "recipe" class = "recipe-view">
      <div class="list-view">
        <% for (var i=0; i<recipes.length; i++) { %>
          <div class="recipe-widget" id=<%=recipes[i]._id%> onclick="toggleDisplay(); getRecipe(this);">
            <p class="recipe-title"> <%= recipes[i].title %> </p>
          </div>
        <% } %>
      </div>

      <div class="recipe-details">
        <div id="recipe-details-id" style="display:none;">
          <h1 class="title-dashboard"></h1>
          <div class="ingredients-list">
              <textarea class="ingredients-dashboard auth-user-input"></textarea>
          </div>
          <div class="directions">
              <textarea class="directions-dashboard auth-user-input">
              </textarea>
          </div>

          <button class="button-secondary pure-button update-button" onclick="updateForm()">Update</button>
        </div>
      </div>
    </div>

  </div>

</HTML> 

